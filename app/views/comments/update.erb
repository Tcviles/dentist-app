<section class="col-3 first clearfix">
  <label>Edit your comment!</label>
</section>

<section class="col-1 first clearfix">
  <form action="/comments/<%=@comment.id%>" method="post">
    <input id="hidden" type="hidden" name="_method" value="PATCH">
    <textarea name="content"><%=@comment.content%></textarea><br>
    <input type="submit" value="submit" class="small_button">
  </form>
</section>

<section class="col-2 clearfix">
  <label>Comments by You</label>
  <% @comments.each do |comment| %>
    <div class="each_comment">
      <label>You</label> wrote to <%=comment.dentist.name%>
      <p>"<%= comment.content %>"</p>
      <% if session[:user_id] == comment.user_id %>
      <a href="/comments/<%=comment.id%>/edit" class="small_button">Edit</a>
      <a href="/comments/<%=comment.id%>/delete" class="small_button">Delete</a><br><br>
      <% end %>
    </div><br>
  <% end %>
</section>
