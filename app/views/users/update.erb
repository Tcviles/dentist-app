<h1>Edit your info!</h1>

<h2>Who is your updated doctor and insurance?</h2>
<h2>Please select one of each</h2>
<form action="/user/<%=session[:user_id]%>" method="post">
  <input id="hidden" type="hidden" name="_method" value="PATCH">

  <%Dentist.all.each do |dentist|%>
    <h4><%=dentist.name%> charges $<%=dentist.fee%>
    <input type="radio" name="dentist" value="<%=dentist.name%>"></h4>
  <%end%>
  <br><br>

  <%Insurance.all.each do |insurance|%>
    <h4><%=insurance.company%> covers $<%=insurance.coverage%>
    <input type="radio" name="insurance" value="<%=insurance.company%>"></h4>
  <%end%>
  <input type="submit" name="" value="Submit" class="button">
</form>
